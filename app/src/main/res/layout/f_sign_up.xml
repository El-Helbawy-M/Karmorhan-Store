<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.SignInFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="vertical">
                <!--image to show the logo-->
                <ImageView
                    android:id="@+id/applogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="60dp"
                    android:src="@drawable/nike"
                    />
                <!--fow entering the name-->
                <EditText
                    android:id="@+id/namefield"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Name"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_decoration"/>
                <!--fow entering the phone-->
                <EditText
                    android:id="@+id/phonefield"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Phone"
                    android:background="@drawable/edit_text_decoration"/>
                <!--fow entering the email-->
                <EditText
                    android:layout_marginVertical="20dp"
                    android:id="@+id/emailfield"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Email"
                    android:background="@drawable/edit_text_decoration"/>
                <!--fow entering the password-->
                <EditText
                    android:id="@+id/passwordfield"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Password"
                    android:background="@drawable/edit_text_decoration"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--to check if the user have an account-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="have an account?! "/>
                    <!--to go to sign in screen-->
                    <TextView
                        android:id="@+id/check_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sing in"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <!--sign iup button to go to welcome screen-->
            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Sing up"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </FrameLayout>
</layout>